# ============================================
# SafeMatch - Docker Compose (DESARROLLO)
# ============================================
# Sin HTTPS - Para desarrollo local

version: '3.8'

services:
  # ============================================
  # Aplicacion Node.js
  # ============================================
  app:
    build:
      context: .
      dockerfile: docker/Dockerfile
    container_name: safematch-app
    restart: unless-stopped
    environment:
      - NODE_ENV=development
      - PORT=3000
      - MONGODB_URI=mongodb://mongo:27017/safematch
      - JWT_SECRET=${JWT_SECRET:-dev_secret_key_change_in_production}
      - JWT_EXPIRES_IN=${JWT_EXPIRES_IN:-7d}
      - CORS_ORIGIN=${CORS_ORIGIN:-*}
    ports:
      - "3001:3000"
    depends_on:
      mongo:
        condition: service_healthy
    networks:
      - safematch-network
    volumes:
      - ./src:/app/src:ro
      - app-logs:/app/logs
    healthcheck:
      test: ["CMD", "node", "-e", "require('http').get('http://localhost:3000/api/health', (r) => process.exit(r.statusCode === 200 ? 0 : 1))"]
      interval: 30s
      timeout: 10s
      retries: 3
      start_period: 10s

  # ============================================
  # MongoDB
  # ============================================
  mongo:
    image: mongo:7
    container_name: safematch-mongo
    restart: unless-stopped
    environment:
      MONGO_INITDB_DATABASE: safematch
    ports:
      - "27017:27017"
    volumes:
      - mongo-data:/data/db
      - mongo-config:/data/configdb
    networks:
      - safematch-network
    healthcheck:
      test: ["CMD", "mongosh", "--eval", "db.adminCommand('ping')"]
      interval: 10s
      timeout: 5s
      retries: 5
      start_period: 10s
    command: ["mongod", "--bind_ip_all"]

  # ============================================
  # Nginx - Reverse Proxy (HTTP only for dev)
  # ============================================
  nginx:
    image: nginx:alpine
    container_name: safematch-nginx
    restart: unless-stopped
    ports:
      - "80:80"
    volumes:
      - ./docker/nginx.dev.conf:/etc/nginx/nginx.conf:ro
      - nginx-logs:/var/log/nginx
    depends_on:
      app:
        condition: service_healthy
    networks:
      - safematch-network

  # ============================================
  # Mongo Express - GUI para MongoDB
  # ============================================
  mongo-express:
    image: mongo-express:latest
    container_name: safematch-mongo-express
    restart: unless-stopped
    environment:
      ME_CONFIG_MONGODB_SERVER: mongo
      ME_CONFIG_MONGODB_PORT: 27017
      ME_CONFIG_BASICAUTH_USERNAME: admin
      ME_CONFIG_BASICAUTH_PASSWORD: admin123
    ports:
      - "8081:8081"
    depends_on:
      mongo:
        condition: service_healthy
    networks:
      - safematch-network

networks:
  safematch-network:
    driver: bridge
    name: safematch-network

volumes:
  mongo-data:
    name: safematch-mongo-data
  mongo-config:
    name: safematch-mongo-config
  app-logs:
    name: safematch-app-logs
  nginx-logs:
    name: safematch-nginx-logs
